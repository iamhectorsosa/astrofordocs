---
export interface ItemType {
    title: string;
    url: string;
}

export interface Props {
    items: ItemType[];
}

const { items } = Astro.props;
---

<nav class="flex items-center justify-between py-4">
    <header class="flex items-center gap-2">
        <a
            title="Open Menu"
            aria-label="Open Menu"
            href="#sidenav-open"
            class="lg:hidden"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 9h16.5m-16.5 6.75h16.5"></path>
            </svg>
        </a>
        <a
            href="/"
            class="text-xl font-bold hover:text-slate-600 dark:hover:text-slate-300"
        >
            Astro for Docs
        </a>
    </header>
    <div class="flex gap-4">
        {
            items.map((item) => (
                <a
                    href={item.url}
                    target="_blank"
                    class="flex items-center gap-2 hover:text-slate-600 dark:hover:text-slate-300"
                >
                    <svg
                        class="h-5 w-5"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-6 h-6"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                        />
                    </svg>
                    {item.title}
                </a>
            ))
        }
    </div>
</nav>
